# .env.example - Copy this to .env and fill in your values
# DO NOT commit actual secrets to Git

# MongoDB Connection
# Get this from your MongoDB Atlas dashboard
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://demo_db_user:demotest@cluster0.zrzxfpd.mongodb.net/sample_mflix

# Database Credentials (for PostgreSQL, MySQL, etc.)
DB_HOST=localhost
DB_PORT=5432
DB_USER=testuser
DB_PASSWORD=testpassword
DB_NAME=testdb

# API Keys & Tokens
API_KEY=your-api-key-here
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# AWS Credentials (if using AWS)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Test Settings
TEST_DATA_VOLUME=100
TEST_TIMEOUT=300
PARALLEL_JOBS=5

# Email Configuration (if applicable)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=smtp_password

# Slack/Notifications (if applicable)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#notifications
